<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <me.panpf.sketch.SketchImageView
            android:id="@+id/packageItem_iconImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher_round"/>

    <TextView
            android:id="@+id/packageItem_nameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/packageItem_installButton"
            app:layout_constraintStart_toEndOf="@id/packageItem_iconImage"
            app:layout_constraintTop_toTopOf="@id/packageItem_iconImage"
            tools:text="刺激战场：全军出击"/>

    <TextView
            android:id="@+id/packageItem_versionNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/packageItem_iconImage"
            app:layout_constraintStart_toStartOf="@id/packageItem_nameText"
            app:layout_constraintTop_toTopOf="@id/packageItem_iconImage"
            tools:text="v1.5.6"/>

    <TextView
            android:id="@+id/packageItem_xpkFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bkg_xpk_flag"
            android:ellipsize="end"
            android:lines="1"
            android:text="XPK"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/packageItem_versionNameText"
            app:layout_constraintStart_toEndOf="@id/packageItem_versionNameText"
            app:layout_constraintTop_toTopOf="@id/packageItem_versionNameText"
            tools:ignore="HardcodedText"/>

    <TextView
            android:id="@+id/packageItem_sizeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/packageItem_iconImage"
            app:layout_constraintEnd_toStartOf="@id/packageItem_installButton"
            app:layout_constraintStart_toStartOf="@id/packageItem_versionNameText"
            tools:text="512MB"/>

    <me.panpf.app.install.sample.ui.widget.InstallButton
            android:id="@+id/packageItem_installButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@id/packageItem_iconImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/packageItem_iconImage"/>
</androidx.constraintlayout.widget.ConstraintLayout>