<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/constraintLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:background="#88ff0000"
                                                   tools:context=".ui.AppsFragment">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/appsF_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:paddingTop="32dp"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:id="@+id/appsF_toolsBackg"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="#88FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <CheckBox
            android:id="@+id/appsF_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="不显示自己"
            app:layout_constraintBottom_toBottomOf="@id/appsF_toolsBackg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/appsF_toolsBackg"/>

    <TextView
            android:id="@+id/appsF_countText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="56个"
            app:layout_constraintBottom_toBottomOf="@id/appsF_toolsBackg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/appsF_toolsBackg"/>

</androidx.constraintlayout.widget.ConstraintLayout>